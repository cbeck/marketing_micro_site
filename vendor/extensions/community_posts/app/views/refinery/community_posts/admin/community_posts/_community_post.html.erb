<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(community_post) -%>">
  <span class='title'>
    <%= community_post.blog_name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_community_posts_admin_community_post_path(community_post),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.community_posts_admin_community_post_path(community_post),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => community_post.blog_name),
        :method => :delete %>
  </span>
</li>
